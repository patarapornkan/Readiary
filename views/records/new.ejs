<% layout('/layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <h1>New Reading</h1>
        <form action="/records" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="date" class="form-label">Date</label>
                <div class="input-group">
                    <input type="date" id="date" placeholder="DD/MM/YYYY" class="form-control" name="record[date]" required>
                    <div class="invalid-feedback">
                        Please select the date
                    </div>
                </div>
            </div> 
            
            <div class="mb-3">
                <label for="duration" class="form-label">Duration in hours</label>
                <div class="input-group">
                    <input type="number" id="duration" class="form-control" name="record[duration]" min="1" required>
                    <div class="invalid-feedback">
                        Please enter the duration of your reading
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <div class="input-group">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="record[genre]" id="fiction" value="fiction" required>
                        <label class="form-check-label" for="fiction">Fiction</label>
                    </div>
                     <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="record[genre]" id="non-fiction" value="non-fiction">
                        <label class="form-check-label" for="non-fiction">Non-Fiction</label>
                    </div>
                    <div class="invalid-feedback">
                        Please select a genre
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="name" class="form-label">Name of the book</label>
                <div class="input-group">
                    <input type="text" id="name" class="form-control" name="record[bookName]" required>
                    <div class="invalid-feedback">
                        Please enter the book name
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="memo" class="form-label">Memo</label>
                <div class="input-group">
                    <textarea name="record[memo]" id="memo" cols="30" rows="10" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please fill in the memo
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <button class="btn btn-success">SAVE</button>
            </div>  
        </form>
    </div>
</div>
